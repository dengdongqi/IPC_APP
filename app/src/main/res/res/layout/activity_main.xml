<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
>

    <include layout="@layout/title_bar" />

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:gravity="center_horizontal">

        <Button android:id="@+id/bt5" style="@style/btStyle" android:text="AIDL-IPC测试" android:layout_marginTop="20dp"/>
        <Button android:id="@+id/bt1" style="@style/btStyle" android:text="IntentIPC测试" android:layout_marginTop="20dp"/>
        <Button android:id="@+id/bt2" style="@style/btStyle" android:text="MessageIPC测试" android:layout_marginTop="20dp"/>
        <Button android:id="@+id/bt3" style="@style/btStyle" android:text="FileShareIPC测试" android:layout_marginTop="20dp"/>
        <Button android:id="@+id/bt4" style="@style/btStyle" android:text="ContentProviderIPC测试" android:layout_marginTop="20dp"/>

        <TextView android:id="@+id/tvContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:gravity="center" android:textColor="#333333" android:textSize="16sp"/>

    </LinearLayout>



</LinearLayout>